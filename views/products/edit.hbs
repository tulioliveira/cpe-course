<div class="container">
    <div class="d-flex flex-column justify-content-center">
        <h1 style="text-align: center">Edit {{name}}</h1>
        <div>
            <form action="/products/{{id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="product[name]" value="{{name}}">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="product[price]" value="{{price}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/products">Go Back</a>
        </div>
    </div>
</div>
